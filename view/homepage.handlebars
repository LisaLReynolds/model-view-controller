<main class="container">
  <div class="p-4 p-md-5 mb-4 rounded text-body-emphasis bg-body-secondary">
    <div class="col-lg-6 px-0">
      <h1 class="display-4 fst-italic">Welcome to Tech Talk</h1>
      <p class="lead my-3">Create Posts and Comment With Developers</p>
    </div>
  </div>

  {{! iterate over the data from our API server and dynamically create HTML for each blog post }}

  <div class="row mb-2">
    <div class="col-md-6">
      {{#each posts as |post|}}
        <div
          class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative"
        >

          <div class="col p-4 d-flex flex-column position-static">

            <h3 class="mb-0">{{post.title}}</h3>

            <p class="card-text mb-auto">
              {{post.content}}
            </p>
            <a href="#" class="icon-link gap-1 icon-link-hover stretched-link">
              Continue reading
              <svg class="bi"><use xlink:href="#chevron-right" /></svg>
            </a>

          </div>

        </div>
      {{/each}}
    </div>

  </div>
</main>